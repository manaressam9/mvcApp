@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}
<h2>Categories</h2>
<div class="d-flex justify-content-center my-2">
    <a class="btn btn-dark" asp-controller="Category" asp-action="AddCategory">Add Category</a>
</div>

<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>
              Name
            </th>
            <th>
               Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                <td style="width:50%">
                    @cat.Name
                </td>
                <td style="width:20%">
                    @cat.DisplayOrder
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="EditCategory" asp-route-id="@cat.Id">Edit</a>
                </td>
                <td>
                   
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@cat.Id" class="btn btn-danger" > Delete</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
